# YDB Configuration
YDB_ENDPOINT=grpcs://ydb.serverless.yandexcloud.net:2135
YDB_DATABASE=/ru-central1/b1gxxxxxxxxxxxxxxxx/etnxxxxxxxxxxxxxxxx

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Cloud Platform
GCP_PROJECT_ID=your_project_id
GCP_REGION=your_region
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# ChromaDB
# Для локального режима ChromaDB (хранение в папке) - закомментируйте строку ниже.
# Для серверного режима ChromaDB (через Docker) - раскомментируйте и используйте 'localhost'.
# CHROMA_HOST=localhost

# LLM Provider Configuration
# Выберите провайдера LLM: "google" или "yandex"
LLM_PROVIDER=google

# YandexGPT Configuration (требуется только если LLM_PROVIDER=yandex)
# YANDEX_FOLDER_ID=your_yandex_folder_id
# YANDEX_API_KEY_SECRET=your_yandex_api_key

# Logging Configuration
# Режим логирования: "local" (локальные файлы) или "cloud" (S3)
LOG_MODE=local

# S3 Configuration (требуется только если LOG_MODE=cloud)
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# S3_BUCKET_NAME=your_s3_bucket_name
# S3_ENDPOINT_URL=https://storage.yandexcloud.net